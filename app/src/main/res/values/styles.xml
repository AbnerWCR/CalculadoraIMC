<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/color_01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/subtitle_default</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="input">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">72dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

</resources>